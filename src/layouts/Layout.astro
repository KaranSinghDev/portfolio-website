---
import '@/styles/globals.css';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-gray-950 text-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Karan Singh's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Karan Singh | Research Software Engineer">
    <meta property="og:description" content="Portfolio of Karan Singh, a software engineer specializing in high-performance computing, C++, Python, and scientific software.">
    <title>{title}</title>
  </head>
  <body>
    <slot /> <!-- This is where your page content (index.astro) goes -->
    <Footer /> <!-- <-- 2. Use the Footer component here -->
  </body>
</html>
